{
  "name": "szomszed-zoldseges",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "pnpm run build:pdf-css && vite dev",
    "build:pdf-css": "pnpm dlx tailwindcss -i ./src/pdf.css -o ./static/pdf.css",
    "build": "pnpm run build:pdf-css && vite build",
    "preview": "vite preview",
    "start": "node --env-file=.env.production ./build/index.js",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "data:mkdir": "mkdir -p data/db && mkdir -p data/pdfs/news",
    "db:migrate": "drizzle-kit generate:sqlite",
    "db:push": "drizzle-kit push:sqlite",
    "db:init-data": "pnpm tsx src/lib/db/setup.ts",
    "db:studio": "drizzle-kit studio --verbose"
  },
  "devDependencies": {
    "@skeletonlabs/skeleton": "^2.9.0",
    "@skeletonlabs/tw-plugin": "^0.3.1",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/adapter-node": "^4.0.1",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@tailwindcss/forms": "^0.5.7",
    "@types/better-sqlite3": "^7.6.9",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^20.11.24",
    "autoprefixer": "^10.4.16",
    "drizzle-kit": "^0.20.14",
    "postcss": "^8.4.32",
    "postcss-load-config": "^5.0.2",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tailwindcss": "^3.3.6",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.3"
  },
  "type": "module",
  "dependencies": {
    "@floating-ui/dom": "^1.6.3",
    "@lucia-auth/adapter-drizzle": "^1.0.2",
    "better-sqlite3": "^9.4.3",
    "dompurify": "^3.0.9",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.29.5",
    "lucia": "^3.0.1",
    "marked": "^12.0.1",
    "md-to-pdf": "4.1.0",
    "oslo": "^1.1.3",
    "tsx": "^4.7.1",
    "winston": "^3.12.0"
  }
}
